num1 = input("Please insert the first number")
num2 = input("Please insert the second number")
num3 = input("Please insert the third number")
num1 = int(num1)
num2 = int(num2)
num3 = int(num3)

def return_largest(num1, num2, num3):
    if num1>num2 and num1>num3:
        print(str(num1) + " is the largest value")
    if num2>num1 and num2>num3:
        print(str(num2) + " is the largest value")
    if num3>num1 and num3>num2:
        print(str(num3) + " is the largest value")
        
return_largest(num1, num2, num3)
